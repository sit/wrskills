---
import BaseHead from "@/components/BaseHead.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="!overflow-x-hidden">
	<head>
		<BaseHead title={title} />
	</head>

	<body class="bg-gray-500 text-white tracking-wide !overflow-x-hidden">
		<header class="fixed top-0 w-screen z-[9999]"><Navbar /></header>
		<main class="mx-auto max-w-7xl pt-28 md:pt-20"><slot /></main>
		<footer class="w-screen bottom-0 overflow-x-hidden"><Footer /></footer>
	</body>
</html>
